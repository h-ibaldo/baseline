{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LineBasis Component Properties Schema",
  "description": "User-controllable properties for all components in the LineBasis page builder",
  "version": "1.0.0",
  
  "definitions": {
    "generalProperties": {
      "type": "object",
      "description": "Properties available on all components",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier"
        },
        "name": {
          "type": "string",
          "description": "Display name for the component"
        },
        "type": {
          "type": "string",
          "description": "Component type identifier"
        },
        "order": {
          "type": "number",
          "description": "Visual order from top to bottom"
        },
        "position": {
          "type": "object",
          "properties": {
            "behavior": {
              "type": "string",
              "enum": ["normal", "floating", "sticky", "fixed"],
              "default": "normal",
              "ui": {
                "control": "segmented",
                "label": "Position Behavior"
              }
            },
            "from-top": {
              "type": ["number", "string"],
              "ui": {
                "control": "input",
                "unit": "px",
                "label": "Top"
              }
            },
            "from-bottom": {
              "type": ["number", "string"],
              "ui": {
                "control": "input",
                "unit": "px",
                "label": "Bottom"
              }
            },
            "from-left": {
              "type": ["number", "string"],
              "ui": {
                "control": "input",
                "unit": "px",
                "label": "Left"
              }
            },
            "from-right": {
              "type": ["number", "string"],
              "ui": {
                "control": "input",
                "unit": "px",
                "label": "Right"
              }
            },
            "layer": {
              "type": "number",
              "default": 0,
              "ui": {
                "control": "input",
                "label": "Z-Index"
              }
            }
          }
        },
        "size": {
          "type": "object",
          "properties": {
            "width": {
              "type": ["string", "number"],
              "enum": ["auto", "fit-content", "fill-parent"],
              "ui": {
                "control": "input-with-presets",
                "label": "Width"
              }
            },
            "height": {
              "type": ["string", "number"],
              "enum": ["auto", "fit-content", "fill-parent"],
              "ui": {
                "control": "input-with-presets",
                "label": "Height"
              }
            },
            "min-width": {
              "type": ["string", "number"],
              "ui": {
                "control": "input",
                "label": "Min Width"
              }
            },
            "max-width": {
              "type": ["string", "number"],
              "ui": {
                "control": "input",
                "label": "Max Width"
              }
            },
            "min-height": {
              "type": ["string", "number"],
              "ui": {
                "control": "input",
                "label": "Min Height"
              }
            },
            "max-height": {
              "type": ["string", "number"],
              "ui": {
                "control": "input",
                "label": "Max Height"
              }
            }
          }
        },
        "spacing": {
          "type": "object",
          "properties": {
            "padding": {
              "oneOf": [
                { "type": "number" },
                {
                  "type": "object",
                  "properties": {
                    "top": { "type": "number" },
                    "right": { "type": "number" },
                    "bottom": { "type": "number" },
                    "left": { "type": "number" }
                  }
                }
              ],
              "ui": {
                "control": "spacing-input",
                "label": "Padding"
              }
            },
            "margin": {
              "oneOf": [
                { "type": "number" },
                {
                  "type": "object",
                  "properties": {
                    "top": { "type": "number" },
                    "right": { "type": "number" },
                    "bottom": { "type": "number" },
                    "left": { "type": "number" }
                  }
                }
              ],
              "ui": {
                "control": "spacing-input",
                "label": "Margin"
              }
            }
          }
        },
        "transform": {
          "type": "object",
          "properties": {
            "rotation": {
              "type": "number",
              "minimum": 0,
              "maximum": 360,
              "default": 0,
              "ui": {
                "control": "slider",
                "label": "Rotation",
                "unit": "Â°"
              }
            },
            "scale": {
              "type": "number",
              "default": 1,
              "ui": {
                "control": "slider",
                "label": "Scale",
                "min": 0,
                "max": 3,
                "step": 0.1
              }
            },
            "move-x": {
              "type": "number",
              "default": 0,
              "ui": {
                "control": "input",
                "label": "Move X",
                "unit": "px"
              }
            },
            "move-y": {
              "type": "number",
              "default": 0,
              "ui": {
                "control": "input",
                "label": "Move Y",
                "unit": "px"
              }
            }
          }
        },
        "visual": {
          "type": "object",
          "properties": {
            "opacity": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "default": 100,
              "ui": {
                "control": "slider",
                "label": "Opacity",
                "unit": "%"
              }
            },
            "blend-mode": {
              "type": "string",
              "enum": [
                "normal",
                "multiply",
                "screen",
                "overlay",
                "soft-light",
                "hard-light",
                "color-dodge",
                "color-burn",
                "darken",
                "lighten",
                "difference",
                "exclusion"
              ],
              "default": "normal",
              "ui": {
                "control": "dropdown",
                "label": "Blend Mode"
              }
            },
            "corner-radius": {
              "oneOf": [
                { "type": "number" },
                {
                  "type": "object",
                  "properties": {
                    "top-left": { "type": "number" },
                    "top-right": { "type": "number" },
                    "bottom-right": { "type": "number" },
                    "bottom-left": { "type": "number" }
                  }
                }
              ],
              "ui": {
                "control": "corner-radius-input",
                "label": "Corner Radius"
              }
            }
          }
        },
        "background": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["color", "image", "gradient", "none"],
              "default": "none",
              "ui": {
                "control": "segmented",
                "label": "Background Type"
              }
            },
            "color": {
              "type": "string",
              "ui": {
                "control": "color-picker",
                "label": "Color"
              }
            },
            "image": {
              "type": "string",
              "ui": {
                "control": "media-picker",
                "label": "Image"
              }
            },
            "image-fit": {
              "type": "string",
              "enum": ["cover", "contain", "fill", "scale-down"],
              "default": "cover",
              "ui": {
                "control": "segmented",
                "label": "Image Fit"
              }
            },
            "image-position": {
              "type": "string",
              "enum": [
                "top-left",
                "top-center",
                "top-right",
                "center-left",
                "center",
                "center-right",
                "bottom-left",
                "bottom-center",
                "bottom-right",
                "custom"
              ],
              "default": "center",
              "ui": {
                "control": "position-picker",
                "label": "Image Position"
              }
            },
            "image-repeat": {
              "type": "string",
              "enum": ["no-repeat", "repeat", "repeat-x", "repeat-y"],
              "default": "no-repeat",
              "ui": {
                "control": "dropdown",
                "label": "Image Repeat"
              }
            },
            "gradient": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["linear", "radial", "conic"],
                  "default": "linear"
                },
                "direction": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 360,
                  "default": 0
                },
                "stops": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "color": { "type": "string" },
                      "opacity": { "type": "number", "minimum": 0, "maximum": 100 },
                      "position": { "type": "number", "minimum": 0, "maximum": 100 }
                    }
                  }
                }
              },
              "ui": {
                "control": "gradient-editor",
                "label": "Gradient"
              }
            }
          }
        },
        "border": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "ui": {
                "control": "toggle",
                "label": "Border"
              }
            },
            "color": {
              "type": "string",
              "ui": {
                "control": "color-picker",
                "label": "Border Color"
              }
            },
            "width": {
              "oneOf": [
                { "type": "number" },
                {
                  "type": "object",
                  "properties": {
                    "top": { "type": "number" },
                    "right": { "type": "number" },
                    "bottom": { "type": "number" },
                    "left": { "type": "number" }
                  }
                }
              ],
              "ui": {
                "control": "border-width-input",
                "label": "Border Width"
              }
            },
            "style": {
              "type": "string",
              "enum": ["solid", "dashed", "dotted"],
              "default": "solid",
              "ui": {
                "control": "segmented",
                "label": "Border Style"
              }
            }
          }
        },
        "effects": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "drop-shadow",
                  "inner-shadow",
                  "blur",
                  "brightness",
                  "contrast",
                  "saturate"
                ]
              },
              "shadow-x": { "type": "number" },
              "shadow-y": { "type": "number" },
              "shadow-blur": { "type": "number" },
              "shadow-spread": { "type": "number" },
              "shadow-color": { "type": "string" },
              "filter-amount": { "type": "number" }
            }
          },
          "ui": {
            "control": "effects-list",
            "label": "Effects"
          }
        },
        "responsive": {
          "type": "object",
          "properties": {
            "mobile": { "type": "object" },
            "tablet": { "type": "object" },
            "desktop": { "type": "object" }
          },
          "ui": {
            "control": "responsive-editor",
            "label": "Responsive"
          }
        },
        "snapToBaseline": {
          "type": "boolean",
          "default": false,
          "ui": {
            "control": "toggle",
            "label": "Snap to Baseline"
          }
        },
        "baselineOffset": {
          "type": "number",
          "default": 0,
          "ui": {
            "control": "input",
            "label": "Baseline Offset"
          }
        }
      },
      "required": ["id", "type"]
    },
    
    "divComponent": {
      "allOf": [
        { "$ref": "#/definitions/generalProperties" },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "div"
            },
            "layout": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["stack", "grid"],
                  "default": "stack",
                  "ui": {
                    "control": "segmented",
                    "label": "Type",
                    "options": [
                      { "value": "stack", "label": "Stack" },
                      { "value": "grid", "label": "Grid" }
                    ]
                  }
                },
                "direction": {
                  "type": "string",
                  "enum": ["horizontal", "vertical"],
                  "default": "vertical",
                  "ui": {
                    "control": "segmented-icon",
                    "label": "Direction",
                    "options": [
                      { "value": "horizontal", "icon": "arrow-horizontal" },
                      { "value": "vertical", "icon": "arrow-vertical" }
                    ]
                  }
                },
                "distribute": {
                  "type": "string",
                  "enum": [
                    "start",
                    "center",
                    "end",
                    "space-between",
                    "space-around",
                    "space-evenly"
                  ],
                  "default": "start",
                  "ui": {
                    "control": "dropdown",
                    "label": "Distribute",
                    "options": [
                      { "value": "start", "label": "Start" },
                      { "value": "center", "label": "Center" },
                      { "value": "end", "label": "End" },
                      { "value": "space-between", "label": "Space Between" },
                      { "value": "space-around", "label": "Space Around" },
                      { "value": "space-evenly", "label": "Space Evenly" }
                    ]
                  }
                },
                "align": {
                  "type": "string",
                  "enum": ["start", "center", "end", "stretch"],
                  "default": "start",
                  "ui": {
                    "control": "segmented-icon",
                    "label": "Align",
                    "options": [
                      { "value": "start", "icon": "align-start" },
                      { "value": "center", "icon": "align-center" },
                      { "value": "end", "icon": "align-end" },
                      { "value": "stretch", "icon": "align-stretch" }
                    ]
                  }
                },
                "wrap": {
                  "type": "string",
                  "enum": ["yes", "no"],
                  "default": "no",
                  "ui": {
                    "control": "segmented",
                    "label": "Wrap",
                    "options": [
                      { "value": "yes", "label": "Yes" },
                      { "value": "no", "label": "No" }
                    ]
                  }
                },
                "gap": {
                  "type": "number",
                  "default": 0,
                  "minimum": 0,
                  "ui": {
                    "control": "slider-with-input",
                    "label": "Gap",
                    "unit": "px",
                    "min": 0,
                    "max": 200,
                    "step": 1
                  }
                }
              },
              "required": ["type", "direction"]
            },
            "grid": {
              "type": "object",
              "properties": {
                "columns": {
                  "oneOf": [
                    { "type": "number" },
                    { "type": "string", "enum": ["auto"] }
                  ],
                  "default": 3,
                  "ui": {
                    "control": "input",
                    "label": "Columns",
                    "showWhen": { "layout.type": "grid" }
                  }
                },
                "rows": {
                  "oneOf": [
                    { "type": "number" },
                    { "type": "string", "enum": ["auto"] }
                  ],
                  "default": "auto",
                  "ui": {
                    "control": "input",
                    "label": "Rows",
                    "showWhen": { "layout.type": "grid" }
                  }
                }
              }
            },
            "content": {
              "type": "object",
              "properties": {
                "overflow": {
                  "type": "string",
                  "enum": ["visible", "hidden", "scroll", "auto"],
                  "default": "visible",
                  "ui": {
                    "control": "dropdown",
                    "label": "Overflow"
                  }
                },
                "fill-space": {
                  "type": "boolean",
                  "default": false,
                  "ui": {
                    "control": "toggle",
                    "label": "Fill Space"
                  }
                }
              }
            },
            "children": {
              "type": "array",
              "items": { "type": "string" },
              "default": []
            }
          }
        }
      ]
    },
    
    "textComponent": {
      "allOf": [
        { "$ref": "#/definitions/generalProperties" },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "text"
            },
            "content": {
              "type": "string",
              "ui": {
                "control": "rich-text-editor",
                "label": "Content"
              }
            },
            "style": {
              "type": "object",
              "properties": {
                "preset": {
                  "type": "string",
                  "enum": [
                    "heading-1",
                    "heading-2",
                    "heading-3",
                    "heading-4",
                    "heading-5",
                    "heading-6",
                    "body",
                    "caption",
                    "small",
                    "custom"
                  ],
                  "default": "body",
                  "ui": {
                    "control": "dropdown",
                    "label": "Text Style"
                  }
                },
                "custom": {
                  "type": "object",
                  "properties": {
                    "font-family": { "type": "string" },
                    "font-size": { "type": "number" },
                    "font-weight": {
                      "type": "string",
                      "enum": ["light", "normal", "medium", "semibold", "bold", "black"]
                    },
                    "font-style": {
                      "type": "string",
                      "enum": ["normal", "italic"]
                    },
                    "line-height": {
                      "oneOf": [
                        { "type": "number" },
                        { "type": "string", "enum": ["auto"] }
                      ]
                    },
                    "letter-spacing": { "type": "number" }
                  },
                  "ui": {
                    "showWhen": { "style.preset": "custom" }
                  }
                }
              }
            },
            "alignment": {
              "type": "string",
              "enum": ["left", "center", "right", "justify"],
              "default": "left",
              "ui": {
                "control": "segmented-icon",
                "label": "Alignment"
              }
            },
            "formatting": {
              "type": "object",
              "properties": {
                "transform": {
                  "type": "string",
                  "enum": ["none", "uppercase", "lowercase", "capitalize"],
                  "default": "none"
                },
                "decoration": {
                  "type": "string",
                  "enum": ["none", "underline", "line-through", "overline"],
                  "default": "none"
                },
                "decoration-color": { "type": "string" },
                "decoration-style": {
                  "type": "string",
                  "enum": ["solid", "double", "dotted", "dashed", "wavy"],
                  "default": "solid"
                }
              }
            },
            "color": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["theme", "custom"],
                  "default": "theme"
                },
                "theme-color": {
                  "type": "string",
                  "enum": ["primary", "secondary", "accent", "text", "muted"]
                },
                "custom-color": { "type": "string" }
              }
            },
            "link": {
              "type": "object",
              "properties": {
                "href": { "type": "string" },
                "target": {
                  "type": "string",
                  "enum": ["same-tab", "new-tab"],
                  "default": "same-tab"
                },
                "style": {
                  "type": "string",
                  "enum": ["default", "custom"],
                  "default": "default"
                }
              }
            },
            "accessibility": {
              "type": "object",
              "properties": {
                "screen-reader-label": { "type": "string" },
                "importance": {
                  "type": "string",
                  "enum": ["normal", "high", "low"],
                  "default": "normal"
                },
                "rich-snippet-type": {
                  "type": "string",
                  "enum": ["article", "faq", "product", "none"],
                  "default": "none"
                },
                "rich-snippet": { "type": "string" },
                "language": { "type": "string" },
                "tab-order": { "type": "number" },
                "hidden-from-screen-readers": { "type": "boolean", "default": false }
              }
            }
          }
        }
      ]
    },
    
    "mediaComponent": {
      "allOf": [
        { "$ref": "#/definitions/generalProperties" },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "media"
            },
            "source": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["upload", "library", "url"],
                  "default": "library",
                  "ui": {
                    "control": "segmented",
                    "label": "Source Type"
                  }
                },
                "file": {
                  "type": "string",
                  "ui": {
                    "control": "media-picker",
                    "label": "File"
                  }
                },
                "alt-text": {
                  "type": "string",
                  "ui": {
                    "control": "input",
                    "label": "Alt Text"
                  }
                }
              },
              "required": ["type", "file", "alt-text"]
            },
            "media-type": {
              "type": "string",
              "enum": ["image", "video"],
              "default": "image",
              "ui": {
                "control": "segmented",
                "label": "Media Type"
              }
            },
            "display": {
              "type": "object",
              "properties": {
                "fit": {
                  "type": "string",
                  "enum": ["cover", "contain", "fill", "original", "scale-down"],
                  "default": "cover",
                  "ui": {
                    "control": "segmented",
                    "label": "Fit"
                  }
                },
                "position": {
                  "type": "string",
                  "enum": [
                    "top-left",
                    "top-center",
                    "top-right",
                    "center-left",
                    "center",
                    "center-right",
                    "bottom-left",
                    "bottom-center",
                    "bottom-right",
                    "custom"
                  ],
                  "default": "center",
                  "ui": {
                    "control": "position-picker",
                    "label": "Position"
                  }
                },
                "aspect-ratio": {
                  "type": "string",
                  "enum": ["auto", "16:9", "4:3", "1:1", "3:2", "custom"],
                  "default": "auto",
                  "ui": {
                    "control": "dropdown",
                    "label": "Aspect Ratio"
                  }
                },
                "custom-aspect-ratio": {
                  "type": "number",
                  "ui": {
                    "control": "input",
                    "label": "Custom Aspect Ratio",
                    "showWhen": { "display.aspect-ratio": "custom" }
                  }
                }
              }
            },
            "loading": {
              "type": "object",
              "properties": {
                "behavior": {
                  "type": "string",
                  "enum": ["immediate", "lazy", "on-scroll"],
                  "default": "lazy",
                  "ui": {
                    "control": "dropdown",
                    "label": "Loading"
                  }
                },
                "placeholder": {
                  "type": "string",
                  "enum": ["none", "blur", "color", "custom"],
                  "default": "none",
                  "ui": {
                    "control": "dropdown",
                    "label": "Placeholder"
                  }
                },
                "placeholder-color": { "type": "string" },
                "placeholder-image": { "type": "string" }
              }
            },
            "video": {
              "type": "object",
              "properties": {
                "thumbnail": { "type": "string" },
                "show-controls": { "type": "boolean", "default": true },
                "autoplay": { "type": "boolean", "default": false },
                "loop": { "type": "boolean", "default": false },
                "muted": { "type": "boolean", "default": false },
                "plays-inline": { "type": "boolean", "default": true }
              },
              "ui": {
                "showWhen": { "media-type": "video" }
              }
            },
            "responsive": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": false },
                "mobile-image": { "type": "string" },
                "tablet-image": { "type": "string" },
                "desktop-image": { "type": "string" }
              }
            },
            "metadata": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "caption": { "type": "string" },
                "alt-text": { "type": "string" },
                "copyright": { "type": "string" }
              }
            }
          }
        }
      ]
    },
    
    "buttonComponent": {
      "allOf": [
        { "$ref": "#/definitions/generalProperties" },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "button"
            },
            "content": {
              "type": "object",
              "properties": {
                "text": { "type": "string" },
                "icon": { "type": ["string", "null"] },
                "icon-position": {
                  "type": "string",
                  "enum": ["left", "right", "top", "bottom"],
                  "default": "left"
                }
              },
              "required": ["text"]
            },
            "style": {
              "type": "object",
              "properties": {
                "variant": {
                  "type": "string",
                  "enum": ["primary", "secondary", "outline", "text", "ghost", "custom"],
                  "default": "primary"
                },
                "size": {
                  "type": "string",
                  "enum": ["small", "medium", "large", "custom"],
                  "default": "medium"
                }
              }
            },
            "behavior": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": true },
                "type": {
                  "type": "string",
                  "enum": ["button", "submit", "reset"],
                  "default": "button"
                },
                "action": {
                  "type": "string",
                  "enum": ["none", "link", "form-submit", "custom"],
                  "default": "none"
                },
                "link-url": { "type": "string" },
                "custom-action": { "type": "string" }
              }
            }
          }
        }
      ]
    },
    
    "inputComponent": {
      "allOf": [
        { "$ref": "#/definitions/generalProperties" },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "input"
            },
            "content": {
              "type": "object",
              "properties": {
                "label": { "type": "string" },
                "placeholder": { "type": "string" },
                "value": { "type": "string" },
                "help-text": { "type": "string" }
              }
            },
            "type": {
              "type": "object",
              "properties": {
                "field-type": {
                  "type": "string",
                  "enum": [
                    "text",
                    "email",
                    "password",
                    "number",
                    "phone",
                    "url",
                    "search",
                    "date",
                    "time",
                    "custom"
                  ],
                  "default": "text"
                },
                "custom-type": { "type": "string" }
              }
            },
            "style": {
              "type": "object",
              "properties": {
                "size": {
                  "type": "string",
                  "enum": ["small", "medium", "large", "custom"],
                  "default": "medium"
                },
                "width": {
                  "type": "string",
                  "enum": ["auto", "full", "custom"],
                  "default": "full"
                }
              }
            },
            "behavior": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": true },
                "readonly": { "type": "boolean", "default": false },
                "auto-focus": { "type": "boolean", "default": false },
                "validation": {
                  "type": "object",
                  "properties": {
                    "required": { "type": "boolean", "default": false },
                    "min-length": { "type": "number" },
                    "max-length": { "type": "number" },
                    "pattern": { "type": "string" },
                    "error-message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      ]
    }
  },
  
  "examples": {
    "heroHeading": {
      "id": "hero-heading",
      "type": "text",
      "content": "Welcome to LineBasis",
      "style": {
        "preset": "heading-1"
      },
      "alignment": "center",
      "color": {
        "type": "theme",
        "theme-color": "primary"
      },
      "snapToBaseline": true,
      "baselineOffset": 0
    },
    
    "cardContainer": {
      "id": "card-container",
      "type": "div",
      "layout": {
        "type": "stack",
        "direction": "horizontal",
        "distribute": "space-between",
        "align": "center",
        "wrap": "yes",
        "gap": 16
      },
      "content": {
        "overflow": "visible",
        "fill-space": true
      },
      "responsive": {
        "mobile": {
          "layout": {
            "direction": "vertical",
            "gap": 8
          }
        }
      },
      "children": ["card-1", "card-2", "card-3"]
    },
    
    "heroImage": {
      "id": "hero-image",
      "type": "media",
      "source": {
        "type": "library",
        "file": "hero-image.jpg",
        "alt-text": "Hero image showing our product"
      },
      "media-type": "image",
      "display": {
        "fit": "cover",
        "position": "center",
        "aspect-ratio": "16:9"
      },
      "loading": {
        "behavior": "lazy",
        "placeholder": "blur"
      },
      "responsive": {
        "enabled": true,
        "mobile-image": "hero-mobile.jpg",
        "tablet-image": "hero-tablet.jpg",
        "desktop-image": "hero-desktop.jpg"
      }
    },
    
    "ctaButton": {
      "id": "cta-button",
      "type": "button",
      "content": {
        "text": "Get Started",
        "icon": "arrow-right",
        "icon-position": "right"
      },
      "style": {
        "variant": "primary",
        "size": "large"
      },
      "behavior": {
        "enabled": true,
        "type": "button",
        "action": "link",
        "link-url": "/contact"
      }
    },
    
    "productGrid": {
      "id": "product-grid",
      "type": "div",
      "layout": {
        "type": "grid",
        "distribute": "start",
        "align": "stretch",
        "wrap": "no",
        "gap": 24
      },
      "grid": {
        "columns": 3,
        "rows": "auto"
      },
      "children": [
        "product-1",
        "product-2",
        "product-3",
        "product-4",
        "product-5",
        "product-6"
      ]
    },
    
    "emailInput": {
      "id": "email-input",
      "type": "input",
      "content": {
        "label": "Email Address",
        "placeholder": "Enter your email",
        "help-text": "We'll never share your email"
      },
      "type": {
        "field-type": "email"
      },
      "style": {
        "size": "medium",
        "width": "full"
      },
      "behavior": {
        "enabled": true,
        "validation": {
          "required": true,
          "pattern": "^[^@]+@[^@]+\\.[^@]+$",
          "error-message": "Please enter a valid email address"
        }
      }
    }
  }
}

