{
	"name": "linebasis",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=10.0.0"
	},
	"scripts": {
		"dev": "npm run setup && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"db:compose": "tsx scripts/build-schema.ts",
		"db:compose:check": "tsx scripts/build-schema.ts --check",
		"db:migrate": "npm run db:compose && prisma migrate dev",
		"db:generate": "prisma generate",
		"db:studio": "prisma studio",
		"migrate:plugins": "tsx scripts/migrate-to-plugins.ts",
		"migrate:plugins:check": "tsx scripts/migrate-to-plugins.ts --dry-run",
		"setup": "npm run db:compose && prisma migrate dev && prisma generate && tsx scripts/setup-admin.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.3.1",
