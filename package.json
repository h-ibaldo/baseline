{
	"name": "linebasis",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"db:compose": "tsx scripts/build-schema.ts",
		"db:compose:check": "tsx scripts/build-schema.ts --check",
		"db:migrate": "npm run db:compose && prisma migrate dev",
		"db:generate": "prisma generate",
		"db:studio": "prisma studio",
		"migrate:plugins": "tsx scripts/migrate-to-plugins.ts",
		"migrate:plugins:check": "tsx scripts/migrate-to-plugins.ts --dry-run",
		"setup": "npm run db:compose && prisma migrate dev && prisma generate && tsx scripts/setup-admin.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.0",
		"@sveltejs/vite-plugin-svelte": "^2.0.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.8",
		"@types/bcrypt": "^6.0.0",
		"@types/jszip": "^3.4.0",
		"@vitest/ui": "^3.2.4",
		"jsdom": "^27.0.0",
		"prisma": "^6.16.3",
		"svelte": "^4.0.0",
		"svelte-check": "^3.0.0",
		"tsx": "^4.20.6",
		"typescript": "^5.0.0",
		"vite": "^4.0.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@prisma/client": "^6.16.3",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/sharp": "^0.31.1",
		"bcrypt": "^6.0.0",
		"jsonwebtoken": "^9.0.2",
		"jszip": "^3.10.1",
		"nanoid": "^5.1.6",
		"sharp": "^0.34.4"
	}
}
