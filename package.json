		"svelte": "^4.2.19",
		"svelte-check": "^4.1.1",
		"tailwindcss": "^4.1.14",
		"tsx": "^4.20.6",
		"typescript": "^5.7.2",
		"vite": "^5.4.11",
		"vitest": "^3.2.4"
	},
